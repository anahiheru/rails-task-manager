<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <div>
    <p>
      <%= link_to task.title, task_path(task) %>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%= link_to 'Destroy', task_path(task),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
<% end %>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>


